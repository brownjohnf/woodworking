.row
  .span-24.last
    %h1= @user.name
    %p= @user.email
.row
  .span-12
    %p#followers= pluralize(@user.followers.count, 'follower')
    = render 'associate_form' if user_signed_in?
    - if @user.following.any?
      %h2 Associates
      = render @user.following
  .span-12.last
    - if current_user == @user
      %h2 People who consider you their associate
      = render @user.followers
      = link_to 'edit your account', edit_user_registration_path
    %p
      = link_to 'edit', edit_user_path if can? :update, @user
      = link_to "delete account", registration_path(@user), :confirm => "Are you sure?", :method => :delete if can? :destroy, @user
