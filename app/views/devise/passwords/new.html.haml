.cantainer
  .row
    .span6.offset3
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f|
        = devise_error_messages!
        .control-group
          .controls
            %h2 Forgot your password?
        .control-group
          = f.label :email, :class => 'control-label'
          .controls
            = f.email_field :email
            %p.help-block this be the email addres with which you registered
        .control-group
          .controls
            = f.submit "Send me reset password instructions", :class => 'btn'
        .control-group
          .controls
            = render "links"
