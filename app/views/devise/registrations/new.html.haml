.container
  .row
    .span6.offset3
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f|
        = devise_error_messages!
        .control-group
          .controls
            %h2 Sign up
        .control-group
          = f.label :name, 'Name*', :class => 'control-label'
          .controls
            = f.text_field :name
            %p.help-block this will be your display name
        .control-group
          = f.label :email, 'Email*', :class => 'control-label'
          .controls
            = f.email_field :email
            %p.help-block you will use this email address to sign in
        .control-group
          = f.label :password, 'Password*', :class => 'control-label'
          .controls
            = f.password_field :password
        .control-group
          = f.label :password_confirmation, 'Password Confirmation*', :class => 'control-label'
          .controls
            = f.password_field :password_confirmation
        .control-group
          .controls
            = f.submit "Sign up", :class => 'btn-primary'
        .control-group
          .controls
            = render "links"
